<% if user_signed_in? && current_user.merchant? %>
<div class="row">
  <% @businesses.each do |business| %>
   
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(business.pictures.first.medium),business %>
        <p>Commision: <strong><%= business.commision %></strong></p>
      </div>
    </div>
  <% end %>
</div>
<% else %>
    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img class="first-slide" src="assets/battlefield.jpg" alt="First slide">
          <div class="container">
            <div class="carousel-caption">
              <h1>Be Our Merchant</h1>
              <p>With our platform, you will remain relevant in the future and be able to make good profit even with fierce competition out there!</p>
              <p><a class="btn btn-lg btn-primary" href="#" role="button">Sign up today</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <img class="second-slide" src="assets/mobile.jpg" alt="Second slide">
          <div class="container">
            <div class="carousel-caption">
              <h1 style="color:black">Search Businesses and Services</h1>
              <p style="color:black">We believe we can make change and bring better good to our local community.Come join us and trust us, there are alot of good businesses and services just around your corner!</p>
              <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <img class="third-slide" src="assets/winning.jpg" alt="Third slide">
          <div class="container">
            <div class="carousel-caption">
              <h1>Winning!</h1>
              <p>Win win situation. No loser here !</p>
              <p><a class="btn btn-lg btn-primary" href="#" role="button">Browse gallery</a></p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div><!-- /.carousel -->

<div class="container marketing">
<% @merchants.each do |merchant| %>
      <div class="row">
        <div class="col-lg-4">
          <%= link_to image_tag(merchant.pictures.first.medium, :size=> '240x240'), merchant_path %>
          <h2><%= merchant.name %></h2>
          <p><%= merchant.business_offer %></p>
        </div><% end %>

<% end %>
</dive